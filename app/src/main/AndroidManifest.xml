<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hikers.android.letshike" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--<meta-data-->
            <!--android:name="com.google.android.gms.version"-->
            <!--android:value="@integer/google_play_services_version" />-->
        <activity
            android:name="com.hikers.android.letshike.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hikers.android.letshike.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.hikers.android.letshike.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hikers.android.letshike.MainActivity" />
        </activity>
        <activity
            android:name="com.hikers.android.letshike.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.hikers.android.letshike.SelectedTrail"
            android:label="@string/title_activity_selected_trail" >
        </activity>
    </application>

</manifest>
